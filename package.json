{
  "name": "@nodesecure/utils",
  "version": "2.0.0",
  "description": "NodeSecure utilities",
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "lint": "eslint src/**/*.ts test/**/*.ts",
    "test-only": "glob -c \"tsx --test\" \"./test/**/*.spec.ts\"",
    "test": "npm run lint && npm run test-only",
    "coverage": "c8 -r html npm test"
  },
  "files": [
    "index.d.ts",
    "index.js",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NodeSecure/utils.git"
  },
  "keywords": [
    "utils",
    "nsecure",
    "nodesecure"
  ],
  "author": "GENTILHOMME Thomas <gentilhomme.thomas@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/NodeSecure/utils/issues"
  },
  "homepage": "https://github.com/NodeSecure/utils#readme",
  "devDependencies": {
    "@nodesecure/eslint-config": "^1.9.0",
    "@types/node": "^20.11.28",
    "c8": "^9.1.0",
    "glob": "^10.3.10",
    "tsx": "^4.7.1",
    "typescript": "^5.4.2"
  },
  "dependencies": {
    "@npm/types": "^1.0.2"
  }
}
